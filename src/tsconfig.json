  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "declaration": true,
    "lib": ["ES2017"],
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"]
    }
  },
  "exclude": ["demo", "demo-ng", "node_modules", "platforms", "**/*.aot.ts"]
}
